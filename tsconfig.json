{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Classic",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["DOM","ES6"],
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}